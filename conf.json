{
  "listeners": {
    "*:8080": {
      "pass": "routes"
    }
  },
  "routes": [
    {
      "match": {
        "uri": "/api/*"
      },
      "action": {
        "pass": "applications/app"
      }
    },
    {
      "match": {
        "uri": "~^((/(.*)\\.(js|css|html))|/)$"
      },
      "action": {
        "share": "static$uri"
      }
    },
    {
      "action": {
        "share": "static/index.html"
      }
    }
  ],
  "applications": {
    "app": {
      "processes": {
        "max": 8,
        "spare": 2,
        "idle_timeout": 180
      },
      "type": "external",
      "executable": "server",
      "limits": {
        "timeout": 1,
        "requests": 1000
      }
    }
  }
}
